mas production_department {
    agent lenny: worker.asl {
        beliefs: well_behaved(true)
                 client(client_lenny)
                 message_box(message_box_lenny)

        goal: work

        focus: workers.message_box_lenny
    }

    agent homer: worker.asl {
        beliefs: well_behaved(false)
                 client(client_homer)
                 message_box(message_box_homer)

        goal: work

        focus: workers.message_box_homer
    }

    workspace workers {
        artifact client_lenny: org.hyperagents.demo.WorkerClient("lenny", "http://localhost:8082", "http://localhost:8080")
        artifact client_homer: org.hyperagents.demo.WorkerClient("homer", "http://localhost:8083", "http://localhost:8080")
        artifact message_box_lenny: org.hyperagents.demo.MessageBox(8082)
        artifact message_box_homer: org.hyperagents.demo.MessageBox(8083)

        agents: lenny, homer
    }

    asl-path: "src/main/jason"
    java-path: "src/main/cartago"
    org-path: "src/main/moise"
}